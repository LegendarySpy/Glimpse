{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "glimpse",
  "version": "0.1.0",
  "identifier": "com.garon.glimpse",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "glimpse",
        "width": 125,
        "height": 40,
        "x": 0,
        "y": 0,
        "resizable": false,
        "decorations": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "transparent": true,
        "shadow": false,
        "center": false,
        "focus": false,
        "visible": false
      },
      {
        "label": "settings",
        "title": "Glimpse Settings",
        "width": 400,
        "height": 300,
        "resizable": true,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}