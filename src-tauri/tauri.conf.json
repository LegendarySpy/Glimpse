{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "glimpse",
  "version": "0.2.0",
  "identifier": "dev.glimpse.glimpse",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "glimpse",
        "width": 175,
        "height": 140,
        "x": 0,
        "y": 0,
        "resizable": false,
        "decorations": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "transparent": true,
        "shadow": false,
        "center": false,
        "focus": false,
        "visible": false
      },
      {
        "label": "settings",
        "title": "Glimpse Settings",
        "width": 900,
        "height": 750,
        "minWidth": 625,
        "minHeight": 400,
        "resizable": true,
        "visible": false,
        "hiddenTitle": true,
        "titleBarStyle": "Overlay"
      },
      {
        "label": "toast",
        "title": "Glimpse Toast",
        "width": 185,
        "height": 100,
        "x": 0,
        "y": 0,
        "resizable": false,
        "decorations": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "transparent": true,
        "shadow": false,
        "center": false,
        "focus": false,
        "visible": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data: blob: https: http:; connect-src *; base-uri 'self'; form-action 'self'"
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "entitlements": "./Entitlements.plist",
      "hardenedRuntime": true
    }
  }
}